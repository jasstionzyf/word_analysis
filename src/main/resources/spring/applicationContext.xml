<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-4.1.xsd"
       xmlns:task="http://www.springframework.org/schema/task">

        

    <!-- 加载配置文件 -->
    <bean
        class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:baihe-analysis.properties</value>
            </list>
        </property>
    </bean>
    <import resource="classpath:spring/applicationContext-servlet.xml"/>
    <task:scheduled-tasks scheduler="myScheduler">
        <task:scheduled ref="dictionaryRefresher" method="reload" fixed-delay="600000" initial-delay="1000"/>
    </task:scheduled-tasks>
    <bean id="dictionaryRefresher"
          class="com.baihe.analysis.service.impl.DictionaryRefresher">
      
        
    </bean>

    <task:scheduler id="myScheduler" pool-size="1"/>
</beans>